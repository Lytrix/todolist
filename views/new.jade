extends layout
block content
        // p #{moment().format('MM/DD/YYYY')}
        form( method="post", data-ajax="false", action="/save" )
            ul(data-role="listview", data-inset="true")
                // EVENT DATE
                li(data-role="fieldcontain")
                    label(for="eventDate") Date
                    input(data-mini="true" data-clear-btn="false" type="date" id="eventDate" name="eventDate" style="height: 20px")

                // EVENT TIME
                li(data-role="fieldcontain")
                    label(for="eventTime") Time
                    input(data-mini="true" data-clear-btn="false" type="time" id="eventTime" name="eventTime")
               
                // PLANNED ACTIVITY
                li(data-role="fieldcontain")
                    label(for="activityTime") Activity
                    input(data-mini="true" data-clear-btn="false" name="activityTime" id="activityTime" type="time")      
                    label(for="activityType")
                    select(id="activityType" data-native-menu="false" data-mini="true")                    
                        option(selected="selected" value="") QuickSelect 
                        each activitytype in selectboxes[2].activitytypes
                            option(value="#{activitytype}") #{activitytype}
                   
                // FOOD
                li(data-role="fieldcontain")
                    label(for="carbGrams") Food Carbs 
                    input(data-mini="true" data-clear-btn="true" name="carbGrams" id="carbGrams" placeholder="15 grams"  type="number") 
                    label(for="carbTypes")
                    select(id="carbTypes" name="carbTypes" data-native-menu="false" data-mini="true")
                         option(selected="selected" value="") QuickSelect 
                         each carbtype in selectboxes[1].carbtypes
                            option(value="#{carbtype}") #{carbtype}
                       
                        
                // INSULIN UNITS
                li(data-role="fieldcontain")
                   label(for="insulinUnits") Insulin Units
                   input(data-mini="true" data-clear-btn="true" name="insulinUnits" id="insulinUnits" placeholder="12 units" type="number")
 
                // Special
                li(data-role="fieldcontain")
                    label(for="eventTypes")  Correction
                    select(id="eventTypes" name="eventTypes" data-native-menu="false" data-mini="true")
                        option(selected="selected" value="") QuickSelect 
                        each eventtype in selectboxes[0].eventtypes
                            option(value="#{eventtype}") #{eventtype}

                // Notes
                li(data-role="fieldcontain")
                    label(for="note") Note
                    textarea(name="note", id="note") 
                      
                      

            input(type="submit", value="Add", data-icon="check", data-inline="true")
            a(href="/home", data-role="button", data-icon="back",data-rel="back", data-inline="true") Cancel