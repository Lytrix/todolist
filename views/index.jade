// Startseite
extends layout
block content
    h2= title
    ul#actions(data-role="listview",data-filter="true", data-filter-placeholder="Filter", data-inset="true")
        - each action in actions
            li(id=action._id)
                a(href="/edit/#{action._id}")
                    h3= action.eventTime
                      &nbsp
                      = action.eventDate
                    table
                        thead
                            tr
                                td
                                    = action.insulinUnits
                                    &nbspmmol/ml
                                td
                                    = action.carbGrams
                                    &nbspGrams
                                td
                                    Type
                        tbody 
                            tr 
                                td
                                    = action.insulinType
                                td
                                    = action.carbTypes
                                td
                                    = action.eventTypes
                    
                    p(class="ui-li-aside")
                        
                    a(href="/delete/#{action._id}",data-theme="a", data-icon="delete") Remove